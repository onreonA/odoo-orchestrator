#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Git durumunu yenile (Cursor'un algılaması için)
# Bu hook commit sonrası git durumunu normalize eder
git status > /dev/null 2>&1

# Git index'i yenile (opsiyonel - gerekirse açın)
# git add . --renormalize > /dev/null 2>&1 || true

echo "✅ Commit tamamlandı - Git durumu yenilendi"

